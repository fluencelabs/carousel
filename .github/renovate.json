{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["regex", "github-actions"],
  "regexManagers": [
    {
      "fileMatch": [
        "^src/versions\\.json$"
      ],
      "matchStrings": [
        "\"nox\": \"fluencelabs/nox:rich_(?<currentValue>\\d+\\.\\d+\\.\\d+)\",\n"
      ],
      "datasourceTemplate": "docker",
      "versioningTemplate": "semver",
      "depNameTemplate": "nox",
      "valueTemplate": "rich_{{currentValue}}"
    },
    {
      "fileMatch": ["^src/versions\\.json$"],
      "matchStrings": [
        "\"cli\": \"(?<lookupName>@fluencelabs/cli)@(?<currentValue>[^\"\n]+)\""
      ],
      "matchStringsStrategy": "any",
      "datasourceTemplate": "npm",
      "versioningTemplate": "semver",
      "depNameTemplate": "cli"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["regex"],
      "matchDepNames": ["nox", "cli"],
      "groupName": "nox and cli"
    }
  ]
}
